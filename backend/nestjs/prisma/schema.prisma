generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int     @id @default(autoincrement())
  username     String  @unique
  password     String
  otpSecret    String?
  isOtpEnabled Boolean @default(false)

  roles Role[] @relation("UserRoles")

  @@map("users")
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique

  users       User[]       @relation("UserRoles")
  permissions Permission[] @relation("RolePermissions")

  @@map("roles")
}

model Permission {
  id       Int    @id @default(autoincrement())
  name     String @default("")
  type     String @default("action") // menu | page | action
  action   String // e.g., "read", "write", "create", "delete"
  resource String // e.g., "dashboard_menu", "user_management_page", "user_create_button"
  parentId Int?
  sort     Int    @default(0)

  roles Role[] @relation("RolePermissions")

  @@unique([action, resource]) // Unique constraint on action and resource combination
  @@map("permissions")
}
